{
  "name": "chatplay-soundboard",
  "version": "1.0.0",
  "description": "Soundboard minimalista com efeitos de voz e YouTube para Discord/Jogos",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --x64",
    "build:dir": "electron-builder --win --x64 --dir"
  },
  "keywords": [
    "electron",
    "soundboard",
    "voice-effects",
    "youtube",
    "discord"
  ],
  "author": "ChatPlay",
  "license": "MIT",
  "build": {
    "appId": "com.chatplay.soundboard",
    "productName": "ChatPlay Soundboard",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico",
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "allowElevation": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ChatPlay Soundboard",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "installerHeaderIcon": "assets/icon.ico",
      "deleteAppDataOnUninstall": false,
      "runAfterFinish": true,
      "license": "LICENSE.txt"
    },
    "files": [
      "**/*",
      "!**/{.git,.vscode,node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme},node_modules/.bin}",
      "!*.md",
      "!README.md",
      "!dist",
      "!build",
      "!.gitignore",
      "!.eslintrc",
      "!BUILD_INSTALADOR.md",
      "!INSTALADOR.md",
      "!INSTALADOR_STANDALONE.md",
      "!STANDALONE.md"
    ],
    "extraResources": [],
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    }
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12"
  },
  "dependencies": {
    "ffmpeg-static": "^5.2.0",
    "node-fetch": "^2.7.0"
  }
}
